# ============================================
# Infrastructure Provisioning Agent Config
# ============================================

# Database Configuration
DATABASE_URL=postgresql://infraagent:infraagent@localhost:5432/infraagent
SQL_ECHO=false

# Security Keys
# Generate new keys with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SECRET_KEY=your-jwt-secret-key-here-change-in-production
ENCRYPTION_KEY=your-fernet-encryption-key-here-change-in-production

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=60

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# MCP Server Configuration
MCP_SERVER_URL=ws://localhost:8001/mcp
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8001

# Terraform Configuration
TERRAFORM_WORKSPACE_DIR=./terraform/workspaces
TERRAFORM_STATE_BUCKET=your-terraform-state-bucket-name
TERRAFORM_TEMPLATE_DIR=./mcp/server/templates

# AWS Configuration (Optional - can be set per user)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/infraagent.log
LOG_FORMAT=json

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Application Settings
ENVIRONMENT=development
DEBUG=false
MAX_CONCURRENT_REQUESTS=10

# Cost Estimation
ENABLE_COST_ESTIMATION=true
COST_UPDATE_INTERVAL=3600

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60