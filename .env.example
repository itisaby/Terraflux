# ============================================
# Infrastructure Provisioning Agent Config
# ============================================

# Database Configuration
DATABASE_URL=postgresql://infraagent:infraagent@localhost:5432/infraagent
SQL_ECHO=false

# Security Keys (REQUIRED - Application will not start without these)
# Generate SECRET_KEY with: python -c 'import secrets; print(secrets.token_urlsafe(32))'
# Generate ENCRYPTION_KEY with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# WARNING: Changing ENCRYPTION_KEY will make existing encrypted credentials unrecoverable!
SECRET_KEY=
ENCRYPTION_KEY=

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=60

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# MCP Server Configuration
MCP_SERVER_URL=ws://localhost:8001/mcp
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8001

# Terraform Configuration
TERRAFORM_WORKSPACE_DIR=./terraform/workspaces
TERRAFORM_STATE_BUCKET=your-terraform-state-bucket-name
TERRAFORM_TEMPLATE_DIR=./mcp/server/templates

# AWS Configuration (Optional - can be set per user)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/infraagent.log
LOG_FORMAT=json

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Application Settings
ENVIRONMENT=development
DEBUG=false
MAX_CONCURRENT_REQUESTS=10

# CORS Configuration
# Comma-separated list of allowed origins (REQUIRED in production)
# Example: ALLOWED_ORIGINS=https://app.example.com,https://dashboard.example.com
ALLOWED_ORIGINS=http://localhost:8501,http://localhost:3000

# Cost Estimation
ENABLE_COST_ESTIMATION=true
COST_UPDATE_INTERVAL=3600

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Request Size Limiting
MAX_REQUEST_SIZE_MB=10

# Password Requirements
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true